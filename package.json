{
  "name": "aa-storyboard",
  "version": "2.1.1",
  "description": "AsciiArt Editor",
  "main": "./out/main/index.js",
  "author": "tgk",
  "homepage": "https://rss.r401.net/mlt/",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "test:unit": "jest --config jest_node_config.json",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "gen-eslint-globals": "node tool/generate-eslint-rule-global-types.mjs execute"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "better-sqlite3": "^8.7.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "element-plus": "^2.3.14",
    "he": "^1.2.0",
    "iconv-lite": "^0.6.3",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.0",
    "sortablejs": "^1.15.0",
    "textoverlay": "git+https://github.com/tgk1/old-textoverlay.git",
    "vue": "^3.3.4",
    "vue-i18n": "^9.5.0",
    "vue-material-design-icons": "^5.2.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^2.5.0",
    "@intlify/unplugin-vue-i18n": "^1.4.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@types/better-sqlite3": "^7.6.6",
    "@types/he": "^1.2.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.5",
    "@types/sortablejs": "^1.10.6",
    "@types/vue": "^2.0.0",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "dotenv": "^16.3.1",
    "electron": "^25.1.0",
    "electron-builder": "^24.8.1",
    "electron-notarize": "^1.2.2",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-vue": "^9.17.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "less": "^4.2.0",
    "node-gyp": "^10.0.1",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  }
}
